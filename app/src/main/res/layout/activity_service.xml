<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editTextTauxHorraire"
        android:text="0"
        android:layout_alignBaseline="@+id/textViewTauxHorraire"
        android:layout_alignBottom="@+id/textViewTauxHorraire"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Ajouter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonAjouter"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Nom service :"
        android:layout_height="wrap_content"
        android:id="@+id/nomService"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Ville :"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewVille"
        android:textSize="16sp"
        android:layout_below="@+id/editTextServiceEmail"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerServiceAjout"
        android:layout_below="@+id/nomService"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editTextPrix"
        android:text="0"
        android:layout_below="@+id/spinnerServiceAjout"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Taux Horraire :"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTauxHorraire"
        android:textSize="16sp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editTextServiceEmail"
        android:layout_alignBaseline="@+id/textViewServiceEmail"
        android:layout_alignBottom="@+id/textViewServiceEmail"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewServiceEmail"
        android:textSize="16sp"
        android:text="E-mail : "
        android:layout_marginTop="25dp"
        android:layout_below="@+id/editTextPrix"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Prix :"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewPrix"
        android:textSize="16sp"
        android:layout_alignBaseline="@+id/editTextPrix"
        android:layout_alignBottom="@+id/editTextPrix"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Description : "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewDescription"
        android:textSize="16sp"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/editTextServiceNoTel"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_alignTop="@+id/textViewDescription"
        android:layout_alignEnd="@+id/spinnerVilleAjoutService"
        android:id="@+id/editTextDescription" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerVilleAjoutService"
        android:layout_below="@+id/textViewVille"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/editTextServiceNoTel"
        android:layout_below="@+id/editTextTauxHorraire"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text=" No.Telephone :"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewServPhone"
        android:textSize="16sp"
        android:layout_alignBottom="@+id/editTextServiceNoTel"
        android:layout_alignParentStart="true" />


</RelativeLayout>